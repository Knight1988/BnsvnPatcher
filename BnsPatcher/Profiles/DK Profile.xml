<?xml version="1.0" encoding="utf-8" ?>
<XmlPatch>
  <Version>1</Version>
  <Patch>
    <FileName>config[bit].dat.files\\system.config2.xml</FileName>
    <Description>Enable Simple Mode at lv 1</Description>
    <FindAndReplace>
      <Find><option name="use-context-simple-mode-player-character-level" value="[0-9.]+" /></Find>
      <Replace><option name="use-context-simple-mode-player-character-level" value="1" /></Replace>
    </FindAndReplace>
  </Patch>
  <Patch>
    <FileName>xml[bit].dat.files\\client.config2.xml</FileName>
    <Description>Enables ingame Option "Optimal Performance Mode"</Description>
    <FindAndReplace>
      <Find><option name="use-optimal-performance-mode-option" value="false" /></Find>
      <Replace><option name="use-optimal-performance-mode-option" value="true" /></Replace>
    </FindAndReplace>
  </Patch>
  <Patch>
    <FileName>xml[bit].dat.files\\client.config2.xml</FileName>
    <Description>Damage Meter</Description>
    <FindAndReplace>
      <Find><option name="showtype-public-zone" value="[0-9.]+" /></Find>
      <Replace><option name="showtype-public-zone" value="2" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="showtype-party-4-dungeon-and-cave" value="[0-9.]+" /></Find>
      <Replace><option name="showtype-party-4-dungeon-and-cave" value="2" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="showtype-party-6-dungeon-and-cave" value="[0-9.]+" /></Find>
      <Replace><option name="showtype-party-6-dungeon-and-cave" value="2" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="showtype-field-zone" value="[0-9.]+" /></Find>
      <Replace><option name="showtype-field-zone" value="2" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="showtype-classic-field-zone" value="[0-9.]+" /></Find>
      <Replace><option name="showtype-classic-field-zone" value="2" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="showtype-faction-battle-field-zone" value="[0-9.]+" /></Find>
      <Replace><option name="showtype-faction-battle-field-zone" value="2" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="showtype-jackpot-boss-zone" value="[0-9.]+" /></Find>
      <Replace><option name="showtype-jackpot-boss-zone" value="2" /></Replace>
    </FindAndReplace>
  </Patch>
  <Patch>
    <FileName>xml[bit].dat.files\\client.config2.xml</FileName>
    <Description>Enables ingame Option "Optimal Performance Mode"</Description>
    <FindAndReplace>
      <Find><option name="delay-postproc-time" value="[0-9.]+" /></Find>
      <Replace><option name="delay-postproc-time" value="0.100000" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="delay-ui-time" value="[0-9.]+" /></Find>
      <Replace><option name="delay-ui-time" value="0.100000" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="train-complete-delay-time" value="[0-9.]+" /></Find>
      <Replace><option name="train-complete-delay-time" value="0.100000" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="rapid-decompose-duration" value="[0-9.]+" /></Find>
      <Replace><option name="rapid-decompose-duration" value="0.100000" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="decompose-complete-delay" value="[0-9.]+" /></Find>
      <Replace><option name="decompose-complete-delay" value="0.000001" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="self-restraint-gauge-time" value="[0-9.]+" /></Find>
      <Replace><option name="self-restraint-gauge-time" value="0.010000" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="item-transform-progressing-particle-duration" value="[0-9.]+" /></Find>
      <Replace><option name="item-transform-progressing-particle-duration" value="0.1" /></Replace>
    </FindAndReplace>
  </Patch>
  <Patch>
    <FileName>xml[bit].dat.files\\client.config2.xml</FileName>
    <Description>Destroy alert orange items</Description>
    <FindAndReplace>
      <Find><option name="destroy-alert-item-min-grade-need-keyword" value="[0-9.]+" /></Find>
      <Replace><option name="destroy-alert-item-min-grade-need-keyword" value="6" /></Replace>
    </FindAndReplace>
  </Patch>
  <Patch>
    <FileName>xml[bit].dat.files\\client.config2.xml</FileName>
    <Description>No chat ban</Description>
    <FindAndReplace>
      <Find><option name="input-papering-check-low-penalty-duration" value="[0-9.]+" /></Find>
      <Replace><option name="input-papering-check-low-penalty-duration" value="3.000000" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="input-papering-check-midium-penalty-duration" value="[0-9.]+" /></Find>
      <Replace><option name="input-papering-check-midium-penalty-duration" value="3.000000" /></Replace>
    </FindAndReplace>
    <FindAndReplace>
      <Find><option name="input-papering-check-high-penalty-duration" value="[0-9.]+" /></Find>
      <Replace><option name="input-papering-check-high-penalty-duration" value="3.000000" /></Replace>
    </FindAndReplace>
  </Patch>
</XmlPatch>